#include "search_algos.h"
#include <math.h>

int binary_search(int *array, size_t size, int value) {
  size_t idx = 0;
  int left = 0, right = size - 1;
  int middle = 0;

  while (left <= right) {
    middle = left + (right - left) / 2;
    printf("Searching in array: ");
    if (array[middle] == value) {
      return middle;
    }
    if (array[middle] < value) {
      left = middle + 1;
    } else {
      right = middle - 1;
    }
    printf(", ");
  }

  return -1;
}
